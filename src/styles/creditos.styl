azul = #1C62D6

.Cont-contCreditos
	position relative
	top -500px
	left 0
	width 298px
	margin 0 auto
	z-index: 105
	transition all 0.5s ease
	perspective 1800px
	&Box
		position absolute
		width 100%
		height 379px
		transform-style preserve-3d
		transition transform 0.5s
		&:hover
			transform rotate3d(0,1,0,35deg)
	&Box > div,
	&Front > div
		display block
		position absolute
		box-shadow 10px 10px 30px rgba(0, 0, 0, .3)
	&Front
		transform-style preserve-3d
		transform-origin 0% 50%
		transition transform 0.5s
		transform translate3d(0,0,20px)
		z-index: 10
	&Front,
	&Front > div
		width 296px
		height 378px
		border-radius 3px 10px 10px 7px
	&Lado
		background url("./images/weback.png")
		background-position 0px 0px
		width 40px
		height 376px
		left -18px
		transform rotate3d(0,1,0,-90deg)
		border-radius 3px 7px 0 7px
	&Cover
		background url("./images/logoWebmagazinecartula.png")
		background-repeat no-repeat
		background-position 0px 0px
		overflow hidden
		&Sombra
			position absolute
			top -50px
			left -17px
			z-index: 100000
			width 796px
			height 714px
			overflow hidden
			transform rotate(-15deg)

			background: linear-gradient(270deg, rgba(255, 255, 255, .7), rgba(255, 255, 255, .4) 50%, rgba(255, 255, 255, 0) 50.1%) no-repeat;
			background-position: 00px 0px;
			background-size: 500px 500px;

			-moz-mask: -moz-linear-gradient(top, #fff, transparent 50%); /*This doesn't work in Firefox..needs SVG or something*/
			-webkit-mask: -webkit-linear-gradient(top, #fff, transparent 50%);
			 mask: linear-gradient(top, #fff, transparent 50%);

			-webkit-transition: all 0.3s linear;
			-moz-transition: all 0.3s linear;
			transition: all 0.3s linear;
	&Box:hover .Cont-contCreditosCoverSombra
		left -120px